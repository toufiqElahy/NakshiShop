@model NakshiShop.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="create-section ">

<div class="title text-center">
    <h1>Edit Product</h1>

</div>

<hr />
<div class="row container justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Catagory" class="control-label"></label>

                <select asp-for="Catagory" asp-items="ViewBag.catagories">
            <option value="">All</option>
        </select>
                @*<input asp-for="Catagory" class="form-control" />*@
                <span asp-validation-for="Catagory" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control border-secondary" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control border-secondary" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control border-secondary" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control border-secondary" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control border-secondary" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 bg-secondary">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

<div>
    <button class="btn bg-info font-weight-bold"><a asp-action="Index">Back to List</a></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
